<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.com.morecharge.ui.widget.TopBar
        android:id="@+id/scan_authenticated_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/inteGrateColor"
        app:centerText="扫人"
        app:isShowLeft="true"
        app:isShowRightText="false"
        app:leftSrc="@mipmap/ic_back"
        app:rightTextColor="@android:color/white" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/scan_authenticated_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scan_authenticated_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="已实名认证"
        android:textColor="#999999"
        android:textSize="@dimen/font_normal_size" />

</RelativeLayout>