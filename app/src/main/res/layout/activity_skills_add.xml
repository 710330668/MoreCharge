<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.hdd.morecharge.ui.widget.TopBar
            android:id="@+id/skills_add_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/inteGrateColor"
            app:centerText="添加技能"
            app:isShowLeft="true"
            app:isShowRightText="false"
            app:leftSrc="@mipmap/ic_back"
            app:rightTextColor="@android:color/white" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/skills_add_recy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/skills_add_sure"
            android:layout_below="@id/skills_add_topbar" />


        <Button
            android:id="@+id/skills_add_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_btn_normal_height"
            android:layout_below="@id/add_skill_detail_cv"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/bg_integrade_bg_btn"
            android:text="添加技能"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>