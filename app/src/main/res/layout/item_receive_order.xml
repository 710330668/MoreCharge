<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_title">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:orientation="vertical"
        >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="4dp"
                android:layout_height="15dp"
                android:background="@color/FD8B06"
                android:layout_marginLeft="13dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保洁"
                android:textSize="15sp"
                android:textColor="@color/C333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距您:1.5公里"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                />
            
            <ImageView
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_location"
                android:layout_marginRight="12dp"
                android:src="@mipmap/icon_location"/>
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="位置:"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/C333333"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_location_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="德州市勒令福田花园2号楼1单元"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时间:"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/C333333"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-08-29"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工期:"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/C333333"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_time_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5天"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日薪:"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/C333333"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300元"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp"/>
                </LinearLayout>
                
            </LinearLayout>
            
            <Button
                android:id="@+id/btn_rob_order"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="60dp"
                android:background="@mipmap/bg_round"
                android:text="抢单"
                android:textSize="12dp"
                android:textColor="@color/FFFFFF"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/tv_go_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="展开全部"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="@color/color_999999"/>



    </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>