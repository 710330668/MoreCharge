<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none">

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FD8B06">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="营业执照认证"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </RelativeLayout>
        
        <ImageView
            android:layout_width="185dp"
            android:layout_height="225dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@mipmap/ic_launcher"/>
        
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="点击查看大图"
            android:textSize="12sp"
            android:textColor="@color/FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:background="@drawable/shape_rect_round_lic"
            />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lly_content"
            android:background="@drawable/shape_rect_round"
            android:text="上传应用执照"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营业执照上传规则"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:textColor="@color/C666666"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建议提供星期的原件数码照,同时请核对匹配信息是否正确。"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:textColor="@color/C333333"
            android:textSize="12sp"/>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
</ScrollView>