<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="17dp"
        android:text="取消"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择保险"
        android:textColor="#333333"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_cancel" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="确定"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_cancel" />

    <View
        android:id="@+id/view_line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:background="#F4F4F4"
        app:layout_constraintTop_toBottomOf="@+id/tv_cancel" />

    <RadioGroup
        android:id="@+id/rg_button_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/view_line_1">

        <RadioButton
            android:id="@+id/rb_insurance_0"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:button="@null"
            android:checked="true"
            android:gravity="center_vertical"
            android:paddingLeft="27dp"
            android:text="未选购"
            android:textColor="@drawable/bg_down_wind_tc"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4" />

        <RadioButton
            android:id="@+id/rb_insurance_1"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:button="@null"
            android:gravity="center_vertical"
            android:paddingLeft="27dp"
            android:textColor="@drawable/bg_down_wind_tc"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4" />

        <RadioButton
            android:id="@+id/rb_insurance_2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:button="@null"
            android:gravity="center_vertical"
            android:paddingLeft="27dp"
            android:textColor="@drawable/bg_down_wind_tc"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4" />

        <RadioButton
            android:id="@+id/rb_insurance_3"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:button="@null"
            android:gravity="center_vertical"
            android:paddingLeft="27dp"
            android:textColor="@drawable/bg_down_wind_tc"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4" />

    </RadioGroup>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:button="@null"
        android:gravity="center_vertical"
        android:paddingLeft="27dp"
        android:text="同意并接受《保险声明》"
        android:textColor="@drawable/bg_down_wind_tc"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/rg_button_list" />

</android.support.constraint.ConstraintLayout>