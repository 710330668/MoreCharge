<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.com.morecharge.ui.widget.TopBar
            android:id="@+id/skills_check_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/inteGrateColor"
            app:centerText="查看技能"
            app:isShowLeft="true"
            app:isShowRightText="false"
            app:leftSrc="@mipmap/ic_back"
            app:rightTextColor="@android:color/white" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/skills_check_recy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/skills_check_topbar" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>