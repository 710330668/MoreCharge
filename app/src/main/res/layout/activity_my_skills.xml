<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.com.morecharge.ui.widget.TopBar
            android:id="@+id/my_skills_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/inteGrateColor"
            app:centerText="我的技能"
            app:isShowLeft="true"
            app:isShowRightText="false"
            app:leftSrc="@mipmap/ic_back"
            app:rightTextColor="@android:color/white" />


        <RelativeLayout
            android:id="@+id/my_skills_add_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_item_normal_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="添加技能"
                android:textColor="#333333"
                android:textSize="@dimen/font_normal_size" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_arrow_right" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_skills_check_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_item_normal_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="查看技能"
                android:textColor="#333333"
                android:textSize="@dimen/font_normal_size" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_arrow_right" />

        </RelativeLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>