<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/divider"
    android:layout_height="match_parent">

    <com.example.com.morecharge.ui.widget.TopBar
        android:id="@+id/scan_record_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/inteGrateColor"
        app:centerText="认证记录"
        app:isShowLeft="true"
        app:isShowRightText="false"
        app:leftSrc="@mipmap/ic_back"
        app:rightTextColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/scan_record_timebar_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topnar_normal_height"
        android:layout_below="@id/scan_record_topbar"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/scan_record_year_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scan_record_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018"
                android:textColor="#666666"
                android:textSize="@dimen/font_normal_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="年"
                android:textColor="#666666"
                android:textSize="@dimen/font_normal_size" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_scan_filter" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#F4F4F4" />

        <LinearLayout
            android:id="@+id/scan_record_month_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scan_record_month_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textColor="#666666"
                android:textSize="@dimen/font_normal_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="月"
                android:textColor="#666666"
                android:textSize="@dimen/font_normal_size" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_scan_filter" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#F4F4F4" />

        <LinearLayout
            android:id="@+id/scan_record_day_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scan_record_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="#666666"
                android:textSize="@dimen/font_normal_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="日"
                android:textColor="#666666"
                android:textSize="@dimen/font_normal_size" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_scan_filter" />

        </LinearLayout>


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/scan_record_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scan_record_timebar_ll" />

